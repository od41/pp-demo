{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "typedocOptions": {
    "entryPoints": [
      "components/**/*.ts",
      "components/**/*.tsx",
      "api/**/*.ts",
      "hooks/**/*.ts",
      "context/**/*.ts",
      "context/**/*.tsx",
      "hooks/**/*.ts",
      "features/**/*.ts"
    ],
    "out": "docs"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}